{
  "compilerOptions"       : {
    "lib"                      : ["es2020", "DOM"],
    "target"                   : "esnext",
    "module"                   : "esnext",
    "moduleResolution"         : "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "sourceMap"                : true,
    "outDir"                   : "./lib",
    "declaration"              : true,
    "skipLibCheck": true,
    "plugins"                        : [
      {
        "name": "typescript-plugin-css-modules",
        "customMatcher": "\\.css$"
      }
    ]
  },
  "include": [
    "components/**/*"
  ]
}